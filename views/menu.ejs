<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Menu</title>
</head>
<body>
  <%- include('./partials/nav') %>
  <h1>Full Menu</h1>


  <h2>Mains</h2>
  <% mains.forEach((item) => { %>
    <% if (item.rating === 5) { %>
      <h3><%= item.name %> ⭐️</h3>
    <% } else { %>
      <h3><%= item.name %></h3>
   <% } %>
    
    <p>Price: <%= item.price %> Rating: <%= item.rating %></p>
    <p><%= item.details %></p>
  <% }) %>  

  <h2>Sides</h2>
  <% sides.forEach((item) => { %>
    <% if (item.rating === 5) { %>
      <h3><%= item.name %> ⭐️</h3>
    <% } else { %>
      <h3><%= item.name %></h3>
   <% } %>
    
    <p>Price: <%= item.price %> Rating: <%= item.rating %></p>
    <p><%= item.details %></p>
  <% }) %>  

  <h2>Desserts</h2>
  <% desserts.forEach((item) => { %>
    <% if (item.rating === 5) { %>
      <h3><%= item.name %> ⭐️</h3>
    <% } else { %>
      <h3><%= item.name %></h3>
   <% } %>
    
    <p>Price: <%= item.price %> Rating: <%= item.rating %></p>
    <p><%= item.details %></p>
  <% }) %>  



</body>
</html>
